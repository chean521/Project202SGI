<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="24dp"
        android:textStyle="bold"
        android:textSize="10pt"
        android:text="@string/view_act_ttl"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textAlignment="gravity"
                android:gravity="right"
                android:text="Activity Status: "/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textStyle="bold"
                android:id="@+id/view_act_stat"
                android:text="[activity status]"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textAlignment="gravity"
                android:gravity="right"
                android:text="Activity ID: "/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:id="@+id/view_act_pid"
                android:textStyle="bold"
                android:text="[activity id]"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:text="Activity Title: "
                android:textAlignment="gravity"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/view_act_ttl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="[activity name]"
                android:textSize="6pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textAlignment="gravity"
                android:gravity="right"
                android:text="Activity Description: "/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textStyle="bold"
                android:id="@+id/view_act_desc"
                android:text="[activity description]"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textAlignment="gravity"
                android:gravity="right"
                android:text="Created Date: "/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textStyle="bold"
                android:id="@+id/view_act_create_date"
                android:text="[activity date]"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textAlignment="gravity"
                android:gravity="right"
                android:text="Activity Start Date: "/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textStyle="bold"
                android:id="@+id/view_act_start_date"
                android:text="[activity Start Date]"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingBottom="4pt">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textAlignment="gravity"
                android:gravity="right"
                android:text="Activity End Date: "/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textStyle="bold"
                android:id="@+id/view_act_end_date"
                android:text="[activity End Date]"/>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10">

        <Button
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:text="View Candidate Result"
            android:id="@+id/view_act_view_cand"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/btn_back"
            android:id="@+id/view_act_exit_view"/>

    </LinearLayout>


</LinearLayout>